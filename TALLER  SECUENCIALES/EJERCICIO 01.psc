Algoritmo pesos_a_dolares
	Definir pesos_colombianos Como Real;
	definir dolares Como real;
	pesos_colombianos=0;
	dolares=0;
	escribir "ingrese el valor actual del dolar";
	Escribir "para un resultado exacto busque el valor actual del dolar en internet";
	Leer dolares;
	Escribir "ingrese el valor de pesos a cambiar";
	leer pesos_colombianos;
	dolares=(pesos_colombianos*1)/dolares;
	Escribir "el valor equivalente en dolares es ", dolares;
