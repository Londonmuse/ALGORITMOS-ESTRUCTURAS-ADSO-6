Algoritmo salario_nuevo_de_un_obrero
	Escribir "programa para determinar el salario nuevo de un obrero";
	definir nuevo_salario Como Real;
	definir salario_actual Como Real;
	escribir "por favor ingrese el salario actual";
	leer salario_actual;
	nuevo_salario=(salario_actual*25)/100+salario_actual;
	escribir"su nuevo salario es ",nuevo_salario;
FinAlgoritmo